{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "type-check": "vue-tsc --noEmit --pretty",
    "prepare": "simple-git-hooks",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.150",
    "@nuxt/devtools": "^1.0.4",
    "@sxzz/eslint-config": "^3.7.5",
    "@sxzz/prettier-config": "^2.0.0",
    "@unocss/nuxt": "^0.57.7",
    "@unocss/preset-rem-to-px": "^0.57.7",
    "@unocss/reset": "^0.57.7",
    "@vueuse/nuxt": "^10.6.1",
    "lint-staged": "^15.1.0",
    "nuxt": "^3.8.2",
    "picocolors": "^1.0.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.2",
    "unplugin-icons": "^0.18.0",
    "unplugin-vue-components": "^0.25.2",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.24"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix --no-warn-ignored",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged && pnpm type-check",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "prettier": "@sxzz/prettier-config"
}
